<div class="container">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-1"><h2>ログイン</h2></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-xs-12 col-xs-offset-3">
      <table>
        <tr>
          <th class="col-xs-3">
            <%= f.label :メールアドレス %>
          </th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"col-xs-12"%>
            </div>
          </td>
        </tr>
        <tr>
          <th><br></th>
        </tr>
        <tr>
          <th class="col-xs-3">
            <%= f.label :パスワード %>
          </th>
          <td>
            <%= f.password_field :password, autocomplete: "current-password",class:"col-xs-12" %>
          </td>
        </tr>
      </table>
      <br>
    </div>
    <div class="row">
      <div class="col-xs-7 col-xs-offset-5" class="actions">
        <%= f.submit "ログイン",class:"btn btn-info" %>
      </div>

      <div class="col-xs-12 col-xs-offset-3">
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %><%= f.label :ログイン状態を維持する %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
