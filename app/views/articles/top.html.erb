<div class="container">
  <h1>新着動画</h1>
  <table>
    <tbody>
      <div class="row">
        <% @articles.reverse.each do |article| %>
          <div class="col-md-3">
            <%= article.created_at.strftime('%Y/%m/%d %H:%M') %>投稿<br>
            <%= link_to article do %>
              <%= attachment_image_tag(article, :article_image, size: "200x150") %><br>
              <%= article.title %><br>
            <% end %><br>
          </div>
        <% end %>
      </div>
    </tbody>
  </table>
  <div class="paginate">
    <%= paginate @articles %>
  </div>
</div>