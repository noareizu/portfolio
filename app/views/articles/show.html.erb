<div class="container">
    <h3>
        <%= @article.title %>
    </h3>

    <p>
        <%= @article.mediainfo %>
    </p>

    <div class="field">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <%= video_tag(@article.video, :controls => true, :loop => true, width: "100%") %>
            </div>
        </div>
    </div>

    <div class="pull-right">
        <%= render 'likes/like', article: @article %>
    </div>

    <% if user_signed_in? %>
    <%= form_with(model: [@article, @comment], remote: true) do |f| %>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <%= f.text_area :comment, rows:'1', class: "form-control",placeholder: "コメント入力" %>
            <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        </div>
    </div>
    <% end %>
    <% else %>
    <p>コメントをする場合、ログインをしてください</p>
    <% end %>

    <li class="comments">
        <% @article.comments.each do |c| %>
        <div class="comment-body bb">
            <div class="comment-avatar">
                <div class="avatar">
                    <%= attachment_image_tag c.user, :user_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"20x20" %>
                </div>
            </div>
            <div class="comment-text">
                <div class="comment-author clearfix">
                    <a href="#" class="link-author"><%= c.user.name %></a>
                    <span class="comment-meta">
                      <span class="comment-date"><%= c.created_at.strftime('%Y/%m/%d') %></span>
                  </span>
              </div>
              <div class="comment-entry"><%= c.comment %></div>
          </div>
      </div>
      <% end %>
  </li>
</div>