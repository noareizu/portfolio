<!DOCTYPE html>
<html>
<head>
  <title>ウタ部</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar-fixed-top navbar-inverse">
    <div class="container">
      <ul class="navbar-nav">
        <%= link_to root_path do %>
        <%= image_tag 'ロゴ白.png', :size =>'100x60' %>
        <% end %>
      </ul>

      <ul class="navbar-nav search-area">
        <%= form_with(url: search_articles_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "動画タイトルを検索する", class: "search-input",size:"60" %>
        <%= form.submit "検索", class: "search-btn" %>
        <% end %>
      </ul>

      <% if user_signed_in? && current_user.admin == true %>
      <ul class="navbar-nav navbar-right">
        <li class="header">
          <%= current_user.name %>
        </li>
        <li class="header">
          "ユーザー一覧"
        </li>
        <li class="header">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete,:style => "color: white;" %>
        </li>
      </ul>

      <% elsif user_signed_in? && current_user.admin == false %>
      <ul class="navbar-nav navbar-right">
        <li class="header">
          <%= link_to user_path(current_user),:style => "color: white;" do %>
          <%= current_user.name %>
          <% end %>
        </li>
        <li class="header">
          <%= link_to "動画投稿", new_article_path,:style => "color: white;" %>
        </li>
        <li class="header">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete,:style => "color: white;" %>
        </li>
      </ul>

      <% else %>
      <ul class="navbar-nav navbar-right">
        <li class="header">
          <%= link_to "ログイン", new_user_session_path,:style => "color: white;" %>
        </li>
        <li class="header">
          <%= link_to "新規登録", new_user_registration_path(current_user),:style => "color: white;" %>
        </li>
      </ul>
      <% end %>
    </div>
  </header>
  <div class="main">
    <%= yield %>
  </div>
</body>
</html>
