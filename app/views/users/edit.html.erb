<div class="container">
	<div class="row">
		<div class="col-xs-9 col-xs-offset-1">
			<h3>登録情報編集</h3>
			<%= form_for(@user) do |f| %>
			<div>
				<label class="warning">ユーザーネーム</label>
					<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
			</div>

			<div>
				<div class="user-edit-image">
			        <%= attachment_image_tag @user, :user_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			    </div>
				<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
				<%= f.attachment_field :user_image_id, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>
			<div>
				<label class="warning">ユーザー詳細</label>
				<%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
			</div>
			<div>
				<label class="warning">メールアドレス</label>
				<%= f.email_field :email, autofocus: true, autocomplete: "email",:size => "50*30" %>
			</div>
		</div>
		<div class="row">
			<div class="actions col-xs-2 col-xs-offset-9">
				<%= f.submit "編集内容を保存する", class: "btn btn-info" %>
			</div>
			<% end %>
		</div>
	</div>
</div>